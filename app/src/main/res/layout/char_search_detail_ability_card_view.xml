<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/char_search_detail_gem_card_view"
        android:layout_width="60dp"
        android:layout_height="87dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#dedfe0"
        app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/char_search_detail_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dedfe0"
            android:scaleType="fitXY"></ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/char_search_detail_card_grade_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>

            <TextView
                android:layout_marginLeft="43dp"
                android:id="@+id/char_search_detail_card_awakening_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="45"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="7pt"></TextView>
            <ImageView
                android:id="@+id/char_search_detail_card_name_gra"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <TextView
                android:id="@+id/char_search_detail_card_name"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
            </TextView>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>