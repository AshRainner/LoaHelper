<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/char_search_detail_tripod_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/char_search_detail_tripod_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/test_tripod"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <View
                    android:id="@+id/char_search_detail_tripod_tier_diamond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="5dp"
                    android:background="@color/black"
                    android:rotation="45"></View>

                <TextView
                    android:id="@+id/char_search_detail_tripod_tier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textColor="@color/white"></TextView>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/char_search_detail_tripod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대용량 탄창"
                android:ellipsize="end"
                android:gravity="left|bottom"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="6pt"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/char_search_detail_tripod_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv.5"
                android:ellipsize="end"
                android:gravity="left|top"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="6pt"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>