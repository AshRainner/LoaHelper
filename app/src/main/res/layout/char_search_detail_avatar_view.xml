<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/char_search_detail_avatar_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginRight="5dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/char_search_detail_avatar_name_left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과감한 도약의 총"
            android:gravity="bottom"
            android:textSize="5pt"
            android:textStyle="bold"
            android:textColor="#E08808">
        </TextView>
        <TextView
            android:id="@+id/char_search_detail_avatar_type_left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="right"
            android:text="무기 아바타"
            android:textSize="4pt"
            android:textStyle="bold"
            android:textColor="#adb5bd">
        </TextView>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
        <!--백그라운드기본은 3d3d3d색상-->
        <ImageView
            android:id="@+id/char_search_detail_avatar_image"
            android:background="#2C2F33"
            android:layout_width="40dp"
            android:layout_height="40dp"></ImageView>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:id="@+id/char_search_detail_avatar_right_layout"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/char_search_detail_avatar_name"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ㅁㄴㅇㄹ"
            android:gravity="bottom"
            android:textSize="5pt"
            android:textStyle="bold"
            android:textColor="#E08808">
        </TextView>
        <TextView
            android:id="@+id/char_search_detail_avatar_type"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="무기 아바타"
            android:textSize="4pt"
            android:textStyle="bold"
            android:textColor="#adb5bd">
        </TextView>
    </LinearLayout>

</LinearLayout>