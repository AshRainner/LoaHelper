<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="5dp"
        android:id="@+id/accessory_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#dedfe0">
        <ImageView
            android:id="@+id/char_search_detail_accessory_image"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#dedfe0">
        </ImageView>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/char_search_detail_accessory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d9ae43"
            android:textStyle="bold"
            android:textSize="6pt">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/char_search_detail_accessory_quality"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff00dd"
                        android:textSize="7pt"
                        android:text="100"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/char_search_detail_accessory_ability"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#e2e2e2"
                        android:textSize="7pt"
                        android:text="신치"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:visibility="gone"
                android:id="@+id/char_search_detail_ability_stone_plus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:text="7 · 7 · "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/char_search_detail_ability_stone_minus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:text="2"
                android:textAlignment="center"
                android:textColor="#ff0044"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>