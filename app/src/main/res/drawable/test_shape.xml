<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="50dp"
        android:left="50dp"
        android:top="50dp"
        android:bottom="50dp">
        <rotate
            android:fromDegrees="45"
            android:pivotY="50%"
            android:pivotX="50%">

            <shape android:shape="rectangle" >
                <solid android:color="@color/black"/>
                <corners android:radius="5dp"/>
            </shape>

        </rotate>

    </item>

</layer-list>